            }

            //a specific transaction category must be selected, with unverified status to enable verify button
            if ($(this).val() !== 'O' && ($('#TranStatus').val() === '1' || $('#TranStatus').val() === '4')) {
                $('#btnVerify').removeAttr("disabled");
            } else {
