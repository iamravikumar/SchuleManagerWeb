@{
    ViewBag.Title = "User Search";
    Layout = null;
}

<link href="~/Content/jquery.dataTables.css" rel="stylesheet" />
<script src="~/Scripts/dataTablesScripts/jquery.dataTables.min.js"></script>

<style type="text/css">
    #scrolly {
        width: 1000px;
        height: 450px;
        overflow: auto;
        overflow-y: hidden;
        margin: 0 auto;
        white-space: nowrap;
    }
</style>


<table id="usersTable" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th class="col-md-2">UserName</th>
            <th>SurName</th>
            <th>OtherNames</th>
        </tr>
    </thead>
</table>

<script type="text/javascript">
    var dataTable;
    $(document).ready(function () {

        dataTable = $("#usersTable").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/SchuleManager/Search/LoadGeneralSearchData",
                "data":{ flag: 'U' },
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs":
            [
                {
                    "targets": [0],
                    "visible": true,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [1],
                    "visible": true,
                    "searchable": false,
                    "orderable": false
                },
                {
                    "targets": [2],
                    "visible": true,
                    "searchable": false,
                    "orderable": false
                }
            ],
            "columns": [
                { "data": "UserName", "name": "UserName", "autoWidth": true },
                { "data": "SurName", "name": "SurName", "autoWidth": true },
                { "data": "OtherNames", "name": "OtherNames", "autoWidth": true }
            ]
        });

        $('#usersTable tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                dataTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                var pos = dataTable.row(this).index();
                var row = dataTable.row(pos).data();

                $('#UserName').val(row['UserName']);
                $('#SurName').val(row['SurName']);
                $('#OtherNames').val(row['OtherNames']);

                $("#searchModal").modal('toggle');
            }
        });

    });
</script>
